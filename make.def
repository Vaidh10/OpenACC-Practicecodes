# Parallel C:

# nvc compiler
ifeq ($(CC), nvc)
    CC = nvc
    CFLAGS = -ta=tesla -Minfo=accel
    CLINK = nvc
    CLINKFLAGS = -ta=tesla -Minfo=accel
endif

# GCC compiler
ifeq ($(CC), gcc)
    CC = gcc
    CFLAGS = -fopenacc -cpp -lm -fopt-info
    CLINK = gcc
    CLINKFLAGS = -fopenacc -cpp -lm -fopt-info
endif
C_LIB  = -lm